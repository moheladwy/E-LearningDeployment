pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/moheladwy/E-LearningDeployment'
            }
        }

        stage('Set KUBECONFIG') {
            steps {
                script {
                    // Echo current KUBECONFIG (this may be empty at first)
                    sh 'echo $KUBECONFIG'
                    // Set KUBECONFIG to the desired path
                    sh 'export KUBECONFIG=~/.kube/config'
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'ansible/apply_k8s_resources.yaml',
                    inventory: 'ansible/inventory.ini'
                )
            }
        }
    }

    post {
        always {
            cleanWs()
            echo "Workspace cleaned up after pipeline completion."
        }

        failure {
            echo "Pipeline failed."
        }

        success {
            echo "Pipeline completed successfully."
        }
    }
}
